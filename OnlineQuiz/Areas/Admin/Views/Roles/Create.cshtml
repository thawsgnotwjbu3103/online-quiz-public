@model string
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Tạo mới quyền truy cập</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="/admin/trang-chu" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a href="/admin/quyen-truy-cap" class="breadcrumb-item">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Tạo mới thông tin</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Tạo mới quyền truy cập</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-area="Admin" asp-controller="Roles" asp-action="Create" method="post">
                    <div class="form-group">
                        <label for="name" class="control-label">Tên quyền</label>
                        <input type="text" name="name" id="name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                        <a href="/admin/quyen-truy-cap" class="btn btn-info">Trở lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>