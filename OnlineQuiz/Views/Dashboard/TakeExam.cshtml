@model OnlineQuiz.ViewModels.QuestionAnswerVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.testName</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/assets/admin/images/logo/favicon.png">
    <!-- page css -->
    <link href="~/lib/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
    <!-- Core css -->
    <link href="~/assets/admin/css/app.min.css" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        @{ int i = 1;}
        @foreach (var itemQ in Model.Questions)
        {
            <div class="card m-t-50">
                <div class="card-header">
                    <h4 class="card-title">Câu @i : @itemQ.QuestionTitle</h4>
                </div>
                <div class="card-body" id="answers">
                    @foreach (var itemC in Model.Choices)
                    {
                        if (itemQ.QuestionId == itemC.QuestionId)
                        {
                            <div class="radio">
                                <input id="@itemC.ChoiceId" name="@itemQ.QuestionId" type="radio" value="@itemC.ChoiceId">
                                <label for="@itemC.ChoiceId"><b>@itemC.Choice</b></label>
                            </div>
                        }
                    }
                </div>
            </div>
            i++;
        }
        <button class="w-100 btn btn-secondary my-5" id="submit" name="submit">Nộp bài</button>
    </div>



    <!-- Core Vendors JS -->
    <script src="~/assets/admin/js/vendors.min.js"></script>
    <!-- page js -->
    <!-- Core JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/admin/js/app.min.js"></script>
    <script src="~/js/site.js"></script>
    @await Component.InvokeAsync("Notyf")
</body>
</html>
